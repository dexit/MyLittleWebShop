<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="../public/css/style.css" />
    <title>Test</title>
  </head>
  <body class="bg-light">
    <div
      class="container bg-white mt-5 w-50 m-auto shadow-sm p-3 mb-5 bg-body rounded"
    >
      <header class="ms-5 mt-2">
        <div class="row my-2">
          <button type="button" class="col-sm-2 btn btn-secondary">Back</button>
          <div class="col-md-8">
            <input type="text" class="form-control" placeholder="Search Item" />
          </div>
        </div>
      </header>
      <div class="text-center mt-5">
        <h4>Sign Up New</h4>
      </div>
      <form class="row my-5">
        <label class="col-sm-2 col-form-label">First Name:</label>
        <div class="col-md-4">
          <input
            type="text"
            class="form-control"
            placeholder="First name"
            aria-label="First name"
          />
        </div>
        <label class="col-sm-2 col-form-label">Last Name:</label>
        <div class="col-md-4">
          <input
            type="text"
            class="form-control"
            placeholder="Last name"
            aria-label="Last name"
          />
        </div>
        <label class="col-sm-2 col-form-label">Email:</label>
        <div class="col-md-4">
          <input
            type="email"
            class="form-control"
            placeholder="Email"
            aria-label="email"
          />
        </div>
        <label class="col-sm-2 col-form-label">Confirm:</label>
        <div class="col-md-4">
          <input
            type="email"
            class="form-control"
            placeholder="Email"
            aria-label="email"
          />
        </div>
        <label class="col-sm-2 col-form-label">Password:</label>
        <div class="col-md-4">
          <input
            type="text"
            class="form-control"
            placeholder="Password"
            aria-label="Password"
          />
        </div>
        <label class="col-2 col-form-label">Repeat:</label>
        <div class="col-md-4">
          <input
            type="text"
            class="form-control"
            placeholder="Password"
            aria-label="Password"
          />
        </div>
      </form>
      <div class="text-center">
        <button type="button" class="btn btn-primary w-25 mb-2">Sign Up</button>
      </div>
    </div>
  </body>
</html>