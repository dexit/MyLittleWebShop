<main class="container py-5">
  <div
    class="col-md-12 d-flex align-right"
    style="
    display: flex!important;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: flex-end;
"
  >
    <a class="btn-lg btn btn-outline-success" href="/checkout">Checkout
    </a></div>
  <div>
    <div class="table-responsive">

      <table
        class="table  table-striped table-hover table-borderless table align-middle"
      >
        <thead
          class="table  table-striped table-hover table-borderless table align-middle"
        >
          <tr>
            <th>Product Image</th>
            <th>Product Name</th>
            <th>Product Price</th>
            <th>Quantity</th>
            <th></th>

          </tr>
        </thead>

        <tbody class="table-group-divider">
          {{#each cart.products as |product|}}
            <tr
              class="table table table-striped table-hover table-borderless table align-middle"
            >
              <td scope="row"><img
                  class="cartimage"
                  src="{{product.image}}"
                /></td>
              <td>{{product.product_name}}</td>
              <td>{{product.price}}</td>
              <td>{{product.stock}}</td>
              <td style="
    text-align: center;"><button
                  data-product="{{product.id}}"
                  class="btn btn-outline-danger clearCartBtn"
                >âœ–</button></td>
            </tr>
          {{/each}}

        </tbody>
        <tfoot>

        </tfoot>
      </table>
    </div>
  </div>
</main>